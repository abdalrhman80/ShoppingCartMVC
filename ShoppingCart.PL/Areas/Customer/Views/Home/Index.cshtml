@model IEnumerable<Product>

<section class="py-5">
	<div class="container px-4 px-lg-5 mt-5">
		<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
			@foreach (var product in Model)
			{
				<div class="col-12 col-sm-6 col-lg-4 mb-5">
					<div class="card h-100">
						<!-- Product image-->
						<div style="flex-grow:3" class="d-flex justify-content-center align-items-center">
							<a asp-action="Details" asp-route-id="@product.Id">
								<img class="card-img-top" style="max-height:250px" src="~/@product.Image" alt="ProductImage" />
							</a>
						</div>
						<!-- Product details-->
						<div class="card-body p-4 d-flex justify-content-center align-items-center">
							<div class="text-center">
								<!-- Product name-->
								<h5 class="fw-bolder">@product.Name</h5>
								<!-- Product price-->
								$@product.Price
							</div>
						</div>
						<!-- Product actions-->
						<div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
							<div class="text-center">
								<a class="btn btn-outline-dark mt-auto" asp-action="Details" asp-route-id="@product.Id">
									View Details
								</a>
							</div>
						</div>
					</div>
				</div>
			}
		</div>

		<div class="d-flex justify-content-center">

			@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page = page }),
							new PagedListRenderOptions
			{
				LiElementClasses = new string[] { "page-item" },
				PageClasses = new string[] { "page-link" },
				// LinkToFirstPageFormat = "Next",
				LinkToPreviousPageFormat = "<< Previous",
				LinkToNextPageFormat = "Next >",
				// LinkToLastPageFormat = "<< Previous"
			})
		</div>
	</div>
</section>