@model ProductViewModel
@* @model Product *@
@{
	// var categories = new SelectList(ViewBag.Categories, "Id", "Name");
}

<div class="mb-3">
	<label class="form-label" asp-for="Product.Name"></label>
	<input type="text" class="form-control" asp-for="Product.Name" />
	<span class="text-danger" asp-validation-for="Product.Name"></span>
</div>

<div class="mb-3">
	<label class="form-label" asp-for="Product.Description"></label>
	<textarea class="form-control" asp-for="Product.Description" style="height: 90px"></textarea>
</div>

<div class="mb-3">
	<label class="form-label" asp-for="Product.Price"></label>
	<input type="text" class="form-control" asp-for="Product.Price" />
	<span class="text-danger" asp-validation-for="Product.Price"></span>
</div>

<div class="mb-3">
	<label class="form-label" asp-for="Product.Image"></label>
	<input type="file" name="file" id="ImageUpload" class="form-control" onchange="ChangeImage(event)" />
</div>

<div class="mb-3">
	<label class="form-label" asp-for="Product.Category"></label>
	<select class="form-control" asp-for="Product.CategoryId" asp-items="Model.CategoryList">
		<option disabled selected>-----Select Category-----</option>
	</select>
</div>